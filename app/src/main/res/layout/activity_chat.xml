<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/yourUserName_TV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:text="KAREN"
                android:textAlignment="viewEnd"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:text="chat with"
                android:textAlignment="viewStart"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/showAllUsersList_Btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@drawable/personinfo4"
                android:onClick="onClick" />

            <TextView
                android:id="@+id/selectedUser_TV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textStyle="bold" />
            <!--android:text="davit"-->

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/messageLayout"
            android:layout_width="match_parent"
            android:layout_height="420dp">

            <FrameLayout
                android:id="@+id/frame_layout_for_chat_with_users"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_marginLeft="200dp">

            </FrameLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true">

            </android.support.v7.widget.RecyclerView>

        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="100dp">

            <EditText
                android:id="@+id/message_ET"
                android:layout_width="wrap_content"
                android:layout_height="73dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/user2_btn"
                android:hint="Type a message..."
                android:minLines="2"
                android:textCursorDrawable="@color/colorAccent" />

            <Button
                android:id="@+id/user1_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="3dp"
                android:background="#66ff66"
                android:onClick="onClick"
                android:text="you"
                android:textStyle="bold" />

            <Button

                android:id="@+id/user2_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="3dp"
                android:background="#66ffff"
                android:onClick="onClick"
                android:text="other"
                android:textStyle="bold" />

            <Button
                android:id="@+id/gallery_btn"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="34dp"
                android:background="@drawable/gallery"
                android:onClick="onClick" />

            <Button
                android:id="@+id/map_btn"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/gallery_btn"
                android:background="@drawable/placeholder" />

        </RelativeLayout>

    </LinearLayout>
</ScrollView>


