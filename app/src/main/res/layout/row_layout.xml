<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="4" >

    <TextView
        android:visibility="visible"
        android:id="@+id/tv_yourMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="2"
        android:background="@drawable/message1background"
        android:paddingBottom="5dp"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:paddingTop="5dp"
        android:textSize="16sp"
        android:textStyle="bold" />
    <!--android:text="fgfgfgfgfgdgdfgdgdfgdfgfffggdfggfgffdgdgdfgdfgfgfgdfgdfgfdgdfgdfgfdgdfdfgdgfgd fdgdfgdgdgdgdgdgdfgfdgfgfddfggdfgfdgdfgfdgfd artur musayelyan manveli gfdfgdgfdgfgfgfgfgffg art"-->


    <TextView
        android:visibility="visible"
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="35dp"
        android:paddingLeft="35dp"
        android:id="@+id/tv_otherMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="2"
        android:background="@drawable/message2background"
        android:textSize="16sp"/>
    <ImageView
        android:visibility="gone"
        android:layout_gravity="center"
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>